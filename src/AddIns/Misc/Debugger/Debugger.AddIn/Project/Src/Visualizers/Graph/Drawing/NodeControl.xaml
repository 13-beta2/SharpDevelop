                <GradientStop Color="White" Offset="0.8" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid Name="propertyGrid">
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
