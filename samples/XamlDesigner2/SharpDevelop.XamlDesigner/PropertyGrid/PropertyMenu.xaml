<ContextMenu x:Class="SharpDevelop.XamlDesigner.PropertyGrid.PropertyMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Commanding="clr-namespace:SharpDevelop.XamlDesigner.Commanding">
    
    <MenuItem Commanding:CommandHelper.Command="Reset" />
    <MenuItem Commanding:CommandHelper.Command="Binding" />
    <MenuItem Header="Local Resources"
              ItemsSource="{Binding LocalResources}" />
    <MenuItem Header="System Resources"
              ItemsSource="{Binding SystemResources}" />    

</ContextMenu>
