<Window xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1"
        Width="400"
        Height="300">
    <Grid>
        <Ellipse Width="100"
                 Height="100"
                 Fill="Red">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="30" />
                    <ScaleTransform  ScaleX="2" />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <StackPanel>
            <Button />
            <Button />
        </StackPanel>
    </Grid>
</Window>